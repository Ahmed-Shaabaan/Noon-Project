@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model UserUpdateModel
@{
    Layout = "_layout";
}

<title>@ViewBag.Title</title>

<div id="alert" class="alert alert-info" role="alert" style="display:none;">
    Infomation Changed
</div>

<div style="display:none;" id="load">
    Please Waiting
    @*<img src="/content/img/loader.gif" style="width:100px;height:100px;" />*@
</div>
<form
      data-ajax-complete="show_Message" 
    data-ajax-loading="#load" data-ajax="true"
    method="post" asp-controller="User" asp-action="UpdateCustomer" >
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" value="@ViewBag.customer.FirstName" class="form-control" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" value="@ViewBag.customer.LastName" class="form-control" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="username"></label>
        <input asp-for="username" class="form-control" value="@ViewBag.customer.UserName" />
        <span asp-validation-for="username"></span>
    </div>
    <div class="form-group">
        <label asp-for="email"></label>
        <input asp-for="email" class="form-control" value="@ViewBag.customer.Email" />
        <span asp-validation-for="email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" value="@ViewBag.customer.PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
   
    <input type="submit" value="@localizer["Submit"]" class="btn btn-primary" />
</form>


<script>
    function show_Message() {
        document.getElementById("alert").style.display = "block";  
    }
</script>