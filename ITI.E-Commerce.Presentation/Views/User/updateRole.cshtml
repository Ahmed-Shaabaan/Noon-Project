@model RoleUpdateModel

<title>@ViewBag.Title</title>

<div id="alert" class="alert alert-info" role="alert" style="display:none;">
   Information Change
</div>

<div style="display:none;" id="load">
    Please Waiting
    @*<img src="/content/img/loader.gif" style="width:100px;height:100px;" />*@
</div>
<form 
    data-ajax-complete="show_Message" 
    data-ajax-loading="#load" data-ajax="true"
    asp-action="UpdateRole" asp-controller="User" method="post" asp-route-id="@ViewBag.Id">
    <div asp-validation-summary="ModelOnly"></div>
    <label>My Role</label>
    @foreach (var item in (List<string>)ViewBag.MyRole)
    {
        <input value="@item" disabled class="form-control" />
    }
   
    <label asp-for="Name"></label>

    <select asp-for="Name"asp-items="@ViewBag.Roles" class="form-control">
    </select>
    <span asp-validation-for="Name"  class="validation"></span>
    <br />

    <input type="submit" class="btn btn-primary" value="Add" />
</form>
<script>
    function show_Message() {
        document.getElementById("alert").style.display = "block";  
    }
</script>