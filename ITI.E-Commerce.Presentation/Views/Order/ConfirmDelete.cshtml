@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<h1>@localizer["Are You Sure To Delete This Order"]</h1>
<a class="btn  btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@Model.ID">@localizer["Yes"]</a>

<a class="btn btn-secondary" asp-controller="Order" asp-action="GetAll">@localizer["Cancel"]</a>