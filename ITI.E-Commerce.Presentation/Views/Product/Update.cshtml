
@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model Product
<title>@ViewBag.Title</title>

<form enctype="multipart/form-data" asp-controller="Product" asp-action="Update" method="post" asp-route-id="@ViewBag.Product.Id" >
<div class="form-group">
<label asp-for="Name">@localizer["Name"]</label>
<input asp-for="Name" class="form-control" value="@ViewBag.Product.Name"  />
</div>

<div class="form-group">
<label asp-for="UnitPrice">@localizer["UnitPrice"]</label>
<input asp-for="UnitPrice" class="form-control" value="@ViewBag.Product.UnitPrice" />
 </div>

  <div class="form-group">
<label asp-for="Quantity">@localizer["Quantity"]</label>
<input asp-for="Quantity" class="form-control" value="@ViewBag.Product.Quantity" />
 </div>

 <div class="form-group">
        <label asp-for="Description">@localizer["Description"]</label>
        @Html.TextArea("Description", (string)(ViewBag.Product.Description), new { @class = "form-control", name = "Description"})
    
         
  </div>
   
  <div class="form-group">
<label asp-for="Discount">@localizer["Discount"]</label>
<input asp-for="Discount" class="form-control" value="@ViewBag.Product.Discount"/>
 </div>

 <div class="form-group">
<label asp-for="Color">@localizer["Color"]</label>
<input asp-for="Color" class="form-control" value="@ViewBag.Product.Color"/>
 </div>

 <div class="form-group">
<label asp-for="Size">@localizer["Size"]</label>
<input asp-for="Size" class="form-control"  value="@ViewBag.Product.Size"/>
 </div>

 <div class="form-group">

        <label asp-for="CategoryID">@localizer["CategoryID"]</label>
        <select asp-for="CategoryID" asp-items="@ViewBag.Category" class="form-control js-example-basic-single " id="id_label_single" data-live-search="true" data-live-search-style="startsWith">
           
        </select>
        <span asp-validation-for="CategoryID" class="validation"></span>

    </div>

<div class="form-group">

        <label asp-for="BrandID">@localizer["BrandID"]</label>
        <select asp-for="BrandID" class="form-control js-example-basic-single" asp-items="ViewBag.Brand">
            
        </select>
        <span asp-validation-for="BrandID" class="validation"></span>
    </div>


 
<input type="submit" value="@localizer["Update"]" class="btn btn-primary"/>
 </form>
 
